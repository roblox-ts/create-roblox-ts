{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "out",
		"declaration": true,
		"module": "commonjs",
		"target": "ES2019",
		"lib": ["ES2019"],
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
		"sourceMap": true
	},
	"exclude": ["templates", "out"]
}
